@{
    ViewBag.Title = "Contact";
}

<link href="~/CSS/Contact.css" rel="stylesheet" />



<script>
  let colArray=['black', 'grey'];
  let i=0;

$(function(){
 $('.two').css(
 {
    height:'300px',
    width: '500px',
      border:'2px dashed white',
      borderRadius:'50px',
       backgroundColor:'black'
   });

   setInterval(function(){
       changeColor();
   },2000);
   function changeColor(){
       $('.two').css({backgroundColor:colArray[i]});
       if(i==(colArray.length-1))
       i=0;
       else
       i++;
   }
   });

</script>
<br>
<br>

<p style="color: white; font-family: initial; font-weight: bold; font-size: 50px; font-style: italic;">
    Thank you for using our services!
</p>
