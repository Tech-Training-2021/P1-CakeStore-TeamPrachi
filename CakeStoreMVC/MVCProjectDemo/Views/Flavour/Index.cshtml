@model IEnumerable<MVCProjectDemo.Models.Flavour>

@{
    ViewBag.Title = "Index";
}

<h2>All Flavours</h2>

<p>
    @Html.ActionLink("Create New", "Create")
    <br />
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.FlavourID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FlavourName)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FlavourID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FlavourName)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { cakeid = item.FlavourID }) |
                @Html.ActionLink("Details", "GetCakesById", new { cakeid = item.FlavourID }) |
                @Html.ActionLink("Delete", "DeleteCake", new { cakeid = item.FlavourID })
            </td>
        </tr>
    }

    @Html.ActionLink("Back", "Modify", "Home")

</table>
